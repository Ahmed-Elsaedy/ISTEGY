@model ISTEGY.Sales.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h4>Product</h4>
<hr />

@if (ViewBag.CanDelete == true)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
}
else
{
    <p class=" mx-3 alert-warning">Cannot delete the prpduct because there are already In/Out transactions that have been performed on this product.</p>
    <p>
        @ViewBag.Count transactions found
    </p>
}